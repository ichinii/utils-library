#!/bin/bash

. req "xbindkeys"
. req "xmodmap"

if [ x$1 == x ]; then
	echo $justkb
else
	if [ x$1 == xon ]; then
		xbindkeys -f ~/keyboard/bind/bind_justkb
		xmodmap ~/keyboard/map/map_justkb
		justkb=on
		echo "JustKb is on now."
	elif [ x$1 == xoff ]; then
		killall xbindkeys
		xmodmap ~/keyboard/map/map_ger
		justkb=off
		echo "JustKb is off now."
	elif [ x$1 == xchange ]; then
		if [ x$justKb == xoff ]; then
			justKb on
		else
			justKb off
		fi
	else
		echo "on, off and change are commands"
	fi
fi

export justkb
