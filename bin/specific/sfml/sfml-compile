#!/bin/bash

req "g++"

reset

usage="Usage:\tsfml-compile -g\n\tsfml-compile <ClassName>\n\tsfml-compile <file>"

if [ -z "$1" ]; then
	files=$(find -name "*.cpp" -type f)
else
	if [ -f "$1" ]; then
		files=$1
	elif [ -f "${1}.cpp" ]; then
		files="${1}.cpp"
	elif [ "$1" == "-g" ]; then
		req 'git'
		files=$(git ls-files --modified)
	else
		req 'find'
		files=$(find -name "${1}.cpp")$(find -name $1)
		if [ -z "$files" ]; then
			echo "$usage"
			exit
		fi
	fi
fi

g++ -O2 -g -Wfatal-errors -c $files -lsfml-window -lsfml-system -lsfml-graphics -lsfml-network -std=c++11
if [ ! -d "bin" ]; then
	mkdir bin
fi
mv *.o bin
g++ bin/*.o -o exe -lsfml-window -lsfml-system -lsfml-graphics -lsfml-network -std=c++11
