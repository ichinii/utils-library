#!/bin/bash

req "gcc"
req "find"

reset

files=$(find -type f -name "*.c")
compilable=
c=0
for file in $files
do
	if [ -f $file ]; then
	compilable+=" "$file
	let "c++"
	fi
done
gcc -O2 -g -Wall -c $compilable
gcc *.o -o exe
ls *.o
rm *.o 2>/dev/null
echo
echo "$c files compiled."

if [ a$1 == a'-r' ]; then
	./exe
fi
