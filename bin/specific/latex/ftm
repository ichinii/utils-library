#!/bin/bash

req 'pdflatex'
req 'gnome-open'

if [ -z $1 ]; then
	files=$(find -name "*.tex")
	counter=0
	for file in files
	do
		counter=$(($counter + 1))
	done
	if [ $counter == 1 ]; then
		pdflatex $files
		if [ "$?" == "0" ]; then
			echo 
			gnome-open "./${files%.tex}.pdf"
			exit $?
		else
			echo "irgendwas ist schief gelaufen"
			exit 1
		fi
	else
		echo "$counter Files gefunden: $files"
		exit 1
	fi
else
	pdflatex $1
	if [ "$?" == "0" ]; then
		gnome-open "./${1%.tex}.pdf"
		exit $?
	else
		echo "irgendwas ist schief gelaufen"
		exit 1
	fi
fi

