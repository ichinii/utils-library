#!/bin/bash

req 'git'

usage="Usage:\tgithelp -a <msg>\n\tgithelp -c\n\tgithelp -l\n\tgithelp -d"
gitroot=$(git rev-parse --show-toplevel)

if [ ! $? == 0 ]; then # if this is not a git-dir
	exit # exit
fi

commitfile="$gitroot/.githelp-commitinfo"

if [ -n "$1" ]; then
	if [ "$1" == "-a" ]; then
		echo "$2; " >> $commitfile
		exit
	fi
	if [ "$1" == "-c" ]; then
		msg=$(echo $(cat $commitfile))
		rm "$commitfile"
		git add -A; git commit -m "$msg"
		exit
	fi
	if [ "$1" == "-l" ]; then
		cat $commitfile
		exit
	fi
	if [ "$1" == "-d" ]; then
		rm "$commitfile"
		exit
	fi
	echo -e "$usage"
fi

