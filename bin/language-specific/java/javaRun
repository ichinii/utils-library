#!/bin/bash

. req "cat"
. req "java"

usage="Usage:\tjavaRun [-p path] [args]"
mp=

if [ a$1 == a"-p" ]; then
	if [ -z $2 ]; then
		echo -e "$usage"
		exit
	fi
	mp="$2"
	shift 2
else
	if [ ! -f ".mainpath" ]; then
		echo "cannot find .mainpath"
		exit
	fi
	mp=$(cat ".mainpath")
fi

if [ ! -d "bin" ]; then
	echo "theres no bin directory...";
	exit
fi

if [ ! -d "res" ]; then
	echo "theres no res directory...";
	exit
fi
java -cp "bin:res" $mp $@
