#!/bin/bash

req "g++"
req "libsfml-dev"

tput reset

files=`tree -f -i -P "*.cpp" --noreport`
compilable=
c=0
for file in $files
do
	if [ -f $file ]; then
	compilable+=" "$file
	let "c++"
	fi
done
g++ -O2 -g -Wfatal-errors -c $compilable
g++ *.o -o exe -lsfml-window -lsfml-system -lsfml-graphics -std=c++11
ls *.o
rm *.o 2>/dev/null
echo
echo "$c files compiled."

if [ a$1 == a'-r' ]; then
	./exe
fi
