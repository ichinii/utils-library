#!/bin/bash
# cppTry v0

req "g++"
req "$editor"

clear

if [ a$1 == 'a-n' ]; then
	echo -e "#include <iostream>\n#define con(x) std::cout << x << std::endl\n\nint main()\n{\n\treturn 0;\n}" >  $ul_tmpdir/CppTry.cpp
fi
if [ ! a$1 == 'a-r' ]; then
	$editor $ul_tmpdir/CppTry.cpp
fi
g++ -O2 -g -Wall -c $ul_tmpdir/CppTry.cpp -o $ul_tmpdir/CppTry.o
if [ -f $ul_tmpdir/CppTry.o ]; then
	g++ $ul_tmpdir/CppTry.o -o $ul_tmpdir/CppTry -lsfml-window -lsfml-system -lsfml-graphics
	rm $ul_tmpdir/CppTry.o
fi
if [ -f $ul_tmpdir/CppTry ]; then
	$ul_tmpdir/CppTry
	rm $ul_tmpdir/CppTry
fi
