#!/bin/bash
# cb v5

req "$editor"
req "tree"
req "find"
req "completer"

usage="usage:\tcb -l\n\tcb -r [file]\n\tcb -d [dirname]\n\tcb [file]\n\tcb -m [file/directory] [target-position]"

if [ -n "$1" ]; then
	if [ "$1" == "--help" ]; then
		echo -e "$usage"
	fi

	if [ ! -d "$tmpdir/cb" ]; then
		mkdir "$tmpdir/cb"
	fi

	if [ "$1" == "-l" ]; then
		tree "$tmpdir/cb"
	elif [ "$1" == "-r" ]; then
		if [ -n "$2" ]; then
			if [ -e "$tmpdir/cb/$2" ]; then
				rm -r "$tmpdir/cb/$2"
			else
				echo "Can't find file $tmpdir/cb/$2"
			fi
		else
			echo -e $usage
		fi
	elif [ "$1" == "-d" ]; then
		if [ -n "$2" ]; then
			mkdir "$tmpdir/cb/$2"
		fi
	elif [ "$1" == "-m" ]; then
		if [ -n "$3" ]; then
			if [ -e "$tmpdir/cb/$2" ]; then
				mv "$tmpdir/cb/$2" "$tmpdir/cb/$3"
			else
				echo "$tmpdir/cb/$2 doesn't exist"
			fi
		else
			echo -e $usage
		fi
	
	else
		$editor $tmpdir/cb/"$1"
	fi
else
	echo -e "$usage"
fi
