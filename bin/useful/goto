#!/bin/bash
# zu erst wird die id, danach der Pfad angegeben

req "xdotool"
req "tput"

libpath="$ul_tmpdir/gotolib"
usage="Usage:\tgoto -n [id] [path]\n\tgoto [id]"

if [ ! -f "$libpath" ]; then
	touch "$libpath"
fi

if [ -z "$1" ]; then
	echo -e $usage
	exit
fi

if [ $1 == "-l" ]; then
	echo
	while read LINE
	do
		printf ${LINE%:*}
		printf " | "
	done < $libpath
	echo
	echo
	exit
fi

if [ $1 == "-n" ]; then
	echo "$2:$3" >> $libpath
else
	id=$1
	line=$(grep "$id:" $libpath)
	line=${line#*:}
	if [ -n "$line" ]; then
		xdotool type "cd $line"
		xdotool key Return
		tput cuu 2
		tput ed 1
	else
		echo "id '$line' not found"
	fi
fi
