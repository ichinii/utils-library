#!/bin/bash

usage="Usage:\tsc <shortcut> [args]"

if [ -z "$1" ]; then
	echo -e $usage
	exit
fi


if [ "$1" == "j" ]; then
	shift
	req "javaCompile"
	req "javaRun"
	javaCompile
	javaRun $@
elif [ "$1" == "jc" ]; then
	req "javaCompile"
	javaCompile
elif [ "$1" == "jr" ]; then
	shift
	req "javaRun"
	javaRun $@
elif [ "$1" == "cpp" ]; then
	shift
	req "cppCompile"
	cppCompile
	./exe $@
elif [ "$1" == "cppc" ]; then
	shift
	req "cppCompile"
	cppCompile
elif [ "$1" == "cppr" ]; then
	./exe $@
elif [ "$1" == "c" ]; then
	shift
	req "cCompile"
	cCompile
	./exe $@
elif [ "$1" == "cc" ]; then
	shift
	req "cCompile"
	cCompile
elif [ "$1" == "cr" ]; then
	./exe $@
else
	echo "Shortcut \"$1\" not found."
fi
