#!/bin/bash

usage="Usage:\tsc <shortcut> [args]"

if [ -z "$1" ]; then
	echo -e $usage
	exit
fi

if [ "$1" == "j" ]; then
	shift
	req "java-compile"
	req "java-run"
	java-compile && java-run $@
elif [ "$1" == "jc" ]; then
	req "java-compile"
	java-compile
elif [ "$1" == "jr" ]; then
	shift
	req "java-run"
	java-run $@
elif [ "$1" == "cpp" ]; then
	shift
	req "cpp-compile"
	cpp-compile && ./exe $@
elif [ "$1" == "cppc" ]; then
	shift
	req "cpp-compile"
	cpp-compile
elif [ "$1" == "cppr" ]; then
	./exe $@
elif [ "$1" == "c" ]; then
	shift
	req "c-compile"
	c-compile && ./exe $@
elif [ "$1" == "cc" ]; then
	shift
	req "c-compile"
	c-compile
elif [ "$1" == "cr" ]; then
	./exe $@
else
	echo "Shortcut \"$1\" not found."
fi
